generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model tbl_admin {
  id        String   @id @default(uuid())
  fullname  String?
  username  String
  email     String   @unique
  password  String
  phoneNumber String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  status    Int?
  resetToken              String?
  resetTokenExpires       DateTime?
}

model tbl_contact {
  ContactId String @id @default(uuid())
  ContactName String
  ContactEmail String
  ContactPhoneNumber String
  ContactSubject String
  ContactMessage String
  ContactDate DateTime @default(now())
}


model tbl_cms {
  CmsId      String @id @default(uuid())
  CmsPageName String @unique
  CmsText    String
}


model tbl_category {
  CatId     String    @id @default(uuid())
  CatName   String    @unique
  CatURL    String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  news tbl_news[]
}


model tbl_news{
NewsId String @id @default(uuid())
CatId String
NewsTitle String @unique
NewsURL String
NewsDescription String
Image String
createdAt DateTime @default(now())
updatedAt DateTime  @updatedAt

category tbl_category @relation(fields: [CatId], references: [CatId])
}


model tbl_newslettersubscriber{
  NLSubID String @id @default(uuid())
  EmailAddress String @unique
  createdAt  DateTime @default(now())
}